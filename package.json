{
  "name": "ocean-link",
  "version": "0.1.0",
  "private": true,
  "description": "Cross-chain stablecoin netting protocol MVP",
  "scripts": {
    "dev:contracts": "cd contracts && forge test",
    "dev:orderbook": "cd backend/orderbook && pnpm dev",
    "dev:solver": "cd backend/solver && pnpm dev",
    "dev:executor": "cd backend/executor && pnpm dev",
    "dev:indexer": "cd backend/indexer && pnpm dev",
    "dev:frontend": "cd frontend && pnpm dev",
    "build:contracts": "cd contracts && forge build",
    "build:backend": "pnpm --filter './backend/*' build",
    "build:frontend": "cd frontend && pnpm build",
    "test:contracts": "cd contracts && forge test",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

