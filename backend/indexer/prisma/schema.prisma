generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Intent {
  id             Int      @id @default(autoincrement())
  userAddress    String   @db.Text
  srcChainId     BigInt   @db.BigInt
  dstChainId     BigInt   @db.BigInt
  tokenAddress   String   @db.Text
  amount         String   @db.Text // Store as string to preserve precision
  minAmountOut   String   @db.Text
  expiry         BigInt   @db.BigInt
  nonce          BigInt   @db.BigInt
  signature      String   @db.Text
  status         String   @default("PENDING") // PENDING / MATCHED / EXECUTED / CANCELLED
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([userAddress])
  @@index([srcChainId, dstChainId])
  @@index([status])
}

model ExecutionPlan {
  id              String   @id @default(uuid())
  status          String   @default("PROPOSED") // PROPOSED / EXECUTED / FAILED
  transfersJson   Json     // Array of LocalTransfer
  involvedIntents Int[]    // Array of intent IDs
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([status])
}

model VaultTransaction {
  id            String   @id @default(uuid())
  chainId       BigInt   @db.BigInt
  vaultAddress  String   @db.Text
  userAddress   String   @db.Text
  type          String   // DEPOSIT or WITHDRAW
  amount        String   @db.Text // Store as string to preserve precision
  txHash        String   @db.Text
  blockNumber   BigInt   @db.BigInt
  blockTimestamp BigInt @db.BigInt
  createdAt     DateTime @default(now())

  @@index([chainId, vaultAddress])
  @@index([userAddress])
  @@index([txHash])
  @@index([blockNumber])
}

